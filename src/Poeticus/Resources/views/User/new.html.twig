{% extends generic_layout %}

{% block head_title %}Création - Compte{% endblock %}
{% block main_title %}Créer un compte{% endblock %}

{% block script_additional %}
	<script src="{{ app.request.basepath }}/js/CLEditor1_3_0/jquery.cleditor.js" type="text/javascript"></script>
	<link rel="stylesheet" href="{{ app.request.basepath }}/js/CLEditor1_3_0/jquery.cleditor.css" type="text/css" media="screen" />
	<script type="text/javascript">
		$(function()
		{
			$("textarea").cleditor({
				docType: ''
			});
			
			$("span#reload_captcha").click(function()
			{
				$.ajax({
					type: "GET",
					url: "{{ path('captcha') }}",
					cache: false,
					success: function(data)
					{
						$("img#captcha").attr("src", "data:image/png;base64," + data.new_captcha);
					}
				});
			});
			
			$("input.captcha_word").val("");
		});
	</script>
{% endblock %}

{% block main_content %}
<form action="{{ path('user_create') }}" method="post" {{ form_enctype(form) }} novalidate>
	<table class="form_grid">
		<tr>
			<th>{{ form_label(form.username) }}</th>
			<td><div class="errors">{{ form_errors(form.username) }}</div>{{ form_widget(form.username) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.password) }}</th>
			<td><div class="errors">{{ form_errors(form.password.first) }}</div>{{ form_widget(form.password.first) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.password.second) }}</th>
			<td><div class="errors">{{ form_errors(form.password.second) }}</div>{{ form_widget(form.password.second) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.email) }}</th>
			<td><div class="errors">{{ form_errors(form.email) }}</div>{{ form_widget(form.email) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.avatar) }}</th>
			<td><div class="errors">{{ form_errors(form.avatar) }}</div>{{ form_widget(form.avatar) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.presentation) }}</th>
			<td><div class="errors">{{ form_errors(form.presentation) }}</div>{{ form_widget(form.presentation) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.country) }}</th>
			<td><div class="errors">{{ form_errors(form.country) }}</div>{{ form_widget(form.country) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.captcha) }}</th>
			<td>
				<div class="errors">{{ form_errors(form.captcha) }}</div>{{ form_widget(form.captcha, { 'attr': { 'placeholder':'Recopiez le mot contenu dans l\'image' }}) }}
				<p><img src='data:image/png;base64,{{ captcha() }}' id="captcha" /> <span class="glyphicon glyphicon-refresh" id="reload_captcha"></span></p>
			</td>
		</tr>
	</table>
	<hr />
	{{ form_widget(form.save) }}
	{{ form_rest(form) }}
</form>
{% endblock %}