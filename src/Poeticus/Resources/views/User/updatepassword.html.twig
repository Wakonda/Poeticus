{% extends generic_layout %}

{% block head_title %}Modification - Mot de passe{% endblock %}
{% block main_title %}Modifier mon mot de passe{% endblock %}

{% block script_additional %}
	<script src="{{ app.request.basepath }}/js/StrengthPasswordCalculation/zxcvbn.js" type="text/javascript"></script>
	<script src="{{ app.request.basepath }}/js/StrengthPasswordCalculation/StrengthPasswordCalculation.js" type="text/javascript"></script>
	<link rel="stylesheet" href="{{ app.request.basepath }}/js/StrengthPasswordCalculation/StrengthPasswordCalculation.css" type="text/css" media="screen" />
	
	<script type="text/javascript">
		$(function()
		{
			// Calculation of the strenght of password
			$("#updatepassword_password_first").StrengthPasswordCalculation();
		});
	</script>
{% endblock %}

{% block main_content %}
{% form_theme form 'Form/fields.html.twig' %}
<form action="{{ path('user_updatepasswordsave') }}" method="post" {{ form_enctype(form) }} novalidate>
	<table class="form_grid">
		<tr>
			<th>{{ form_label(form.password) }}</th>
			<td><div class="errors">{{ form_errors(form.password.first) }}</div>{{ form_widget(form.password.first) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.password.second) }}</th>
			<td><div class="errors">{{ form_errors(form.password.second) }}</div>{{ form_widget(form.password.second) }}</td>
		</tr>
	</table>
	<hr />
	{{ form_widget(form.save, {'icon': 'fa-save'}) }}
	{{ form_rest(form) }}
</form>
{% endblock %}