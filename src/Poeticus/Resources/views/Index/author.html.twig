{% extends generic_layout %}

{% block head_title %}{{ entity.title }}{% endblock %}

{% block style_additional %}
	<link rel="stylesheet" href="{{ app.request.basepath }}/js/DataTables-1.10.0/media/css/jquery.dataTables.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap-theme.min.css"/>
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/dataTables.bootstrap.css"/>
{% endblock %}
{% block script_additional %}
	<script src="{{ app.request.basepath }}/js/dataTables.bootstrap.js"></script>
	<script src="{{ app.request.basepath }}/js/datatables-responsive-master/files/1.10/js/datatables.responsive.js"></script>
	<script src="{{ app.request.basepath }}/js/DataTables-1.10.0/media/js/jquery.dataTables.js" type="text/javascript"></script>
	<script type="text/javascript">
		$(function ()
		{
			oTable = $('table.index_directories').dataTable( {
				"oLanguage": {
					"sUrl": "{{ app.request.basepath }}/js/DataTables-1.10.0/language/dataTables.fr.txt"
				},
				"bFilter": true,
				"bInfo": false,
				"bSort": true,
				"bLengthChange": true,
				"sPaginationType": "full_numbers",
				"iDisplayLength": 15,
				"bProcessing": true,
				"bServerSide": true,
				"sAjaxSource": "{{ path('author_poem_datatables', {'authorId' : entity.id }) }}",
				"autoWidth": false,	
			});
		});
	</script>
{% endblock %}

{% block main_title %}{{ entity.title }}{% endblock %}

{% block main_content %}
	<p class="center">{{ ("photo/biography/"~entity.photo)|max_size_image(app.request.basepath) }}</p>
	<div>
		{{ entity.text|raw }}
		{% if entity.dayBirth is not null or entity.monthBirth is not null or entity.yearBirth is not null %}
			<span class="bold">Date de naissance : </span>
			{% if entity.dayBirth is not null and entity.monthBirth is not null and entity.yearBirth is not null %}
				{{ entity.dayBirth~" "~entity.monthBirth|text_month~" "~entity.yearBirth }}
			{% elseif entity.monthBirth is not null and entity.yearBirth is not null %}
				{{ entity.monthBirth|text_month~" "~entity.yearBirth }}
			{% else %}
				{{ entity.yearBirth }}
			{% endif %}
			<br />
		{% endif %}
		{% if entity.dayDeath is not null or entity.monthDeath is not null or entity.yearDeath is not null %}
			<span class="bold">Date de décès : </span>
			{% if entity.dayDeath is not null and entity.monthDeath is not null and entity.yearDeath is not null %}
				{{ entity.dayDeath~" "~entity.monthDeath|text_month~" "~entity.yearDeath }}
			{% elseif entity.monthDeath is not null and entity.yearDeath is not null %}
				{{ entity.monthDeath|text_month~" "~entity.yearDeath }}
			{% else %}
				{{ entity.yearDeath }}
			{% endif %}
		{% endif %}
		<br>
		<span class="bold">Nationalité : </span> {{ entity.country|toString('title') }}
	</div>
	<hr>
	<h3>Ses poésies</h3>
		<table class="index_directories display">
		<thead>
			<th>Titre</th>
			<th class="phone">Recueil</th>
		</thead>
		<tbody>
		</tbody>
	</table>
{% endblock %}