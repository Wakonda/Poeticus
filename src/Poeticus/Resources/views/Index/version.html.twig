{% extends generic_layout %}

{% block head_title %}{{ 'version.index.Version'|trans }}{% endblock %}
{% block main_title %}{{ 'version.index.Version'|trans }}{% endblock %}

{% block main_content %}
	<p class="center"><img src="{{ app.request_stack.currentrequest.basepath }}/photo/version.png" alt="" class="medium" /></p>
	<div>
		<table class="table table-bordered">
			<thead>
				<tr class="active">
					<th>{{ 'version.index.Version'|trans }}</th>
					<th>{{ 'version.index.ReleaseDate'|trans }}</th>
					<th>{{ 'version.index.Read'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for entity in entities %}
				<tr>
					<td>{{ entity.versionNumber }}</td>
					<td>{{ entity.releaseDate|date_letter }}</td>
					<td>
						{% if entity.file is not empty %}
							<a href="{{ app.request_stack.currentrequest.basepath }}/photo/version/{{ entity.file }}">Lire</a>
						{% else %}
							-
						{% endif %}
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}