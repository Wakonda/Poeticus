{% extends generic_layout %}

{% block head_title %}{{ 'menu.left.Admin'|trans }} - {{ 'admin.index.Biography'|trans }}{% endblock %}
{% block main_title %}{{ 'menu.left.Admin'|trans }} - {{ 'admin.index.Biography'|trans }}{% endblock %}

{% block style_additional %}
	<link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/js/redactor/css/redactor.css" />
{% endblock %}
{% block script_additional %}
	<script src="{{ app.request.basepath }}/js/redactor/redactor.min.js"></script>
	<script type="text/javascript">
		$(function()
		{
			$('.redactor').redactor({
				autoresize: false,
				minHeight: 300,
				buttons: ['html', '|', 'bold', 'italic', 'deleted', 'underline', '|',
				'unorderedlist', 'orderedlist', 'outdent', 'indent', '|',
				'image', 'video', 'file', 'table', 'link', '|', 'fontcolor', 'backcolor', '|', 'alignment', 'aligncenter', 'alignright', 'justify', '|', 'horizontalrule']
			});
			
			$("select#{{ form.language.vars.id }}").change(function() {
				$.ajax({
					type: "GET",
					url: "{{ path('get_countries_by_language') }}",
					data: { "locale" : $(this).val() },
					success: function(data)
					{
						$("select#{{ form.country.vars.id }}").empty();
						$("select#{{ form.country.vars.id }}").append('<option value="" selected="selected">{{ 'main.field.ChooseAnOption'|trans }}</option>');
						
						for (var i = 0; i < data.length; i++) {
							$("select#{{ form.country.vars.id }}").append('<option value="'+ data[i].id +'">'+ data[i].name +'</option>');
							console.log(data[i]);
						}
					}
				});

			});
			
			$("select#{{ form.language.vars.id }}").change();
		});
	</script>
{% endblock %}

{% block main_content %}
{% form_theme form 'Form/fields.html.twig' %}

{{ form_start(form, {'method' : 'post', 'action' : path('biographyadmin_create'), 'attr': {'novalidate': 'novalidate'} }) }}
<table class="form_grid">
		<tr>
			<th>{{ form_label(form.title) }}</th>
			<td><div class="errors">{{ form_errors(form.title) }}</div>{{ form_widget(form.title, {'attr':{'class':'full_width form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.text) }}</th>
			<td><div class="errors">{{ form_errors(form.text) }}</div>{{ form_widget(form.text) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.dayBirth) }}</th>
			<td>{{ form_widget(form.dayBirth, {'attr':{'class':'day form-control'}}) }}/{{ form_widget(form.monthBirth, {'attr':{'class':'month form-control'}}) }}/{{ form_widget(form.yearBirth, {'attr':{'class':'year form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.dayDeath) }}</th>
			<td>{{ form_widget(form.dayDeath, {'attr':{'class':'day form-control'}}) }}/{{ form_widget(form.monthDeath, {'attr':{'class':'month form-control'}}) }}/{{ form_widget(form.yearDeath, {'attr':{'class':'year form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.photo) }}</th>
			<td><div class="errors">{{ form_errors(form.photo) }}</div>{{ form_widget(form.photo) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.language) }}</th>
			<td><div class="errors">{{ form_errors(form.language) }}</div>{{ form_widget(form.language, {'attr':{'class':'full_width form-control'}}) }}</td>
		</tr>
		<tr>
			<th>{{ form_label(form.country) }}</th>
			<td><div class="errors">{{ form_errors(form.country) }}</div>{{ form_widget(form.country, {'attr':{'class':'form-control'}}) }}</td>
		</tr>
	</table>
	<hr />
	{{ form_widget(form.save, {'icon': 'fa-save'}) }}
	{{ form_rest(form) }}
{{ form_end(form) }}

{% endblock %}